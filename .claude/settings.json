{
  "model": "claude-opus-4-5-20251101",

  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "32000",
    "MAX_THINKING_TOKENS": "10000",
    "MAX_MCP_OUTPUT_TOKENS": "50000",
    "MCP_TIMEOUT": "30000"
  },

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Skill",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/tool-use-hook.py",
            "timeout": 10,
            "statusMessage": "üê∞ Tracking rabbit-hole session..."
          }
        ]
      }
    ]
  },

  "permissions": {
    "allow": [
      "Read(.research/**)",
      "Write(.research/**)",
      "Edit(.research/**)",
      "Read(.claude/**)",
      "Bash(curl -L -o .research/papers/*.pdf *)",
      "Bash(jq * .research/*.json)",
      "Bash(cat .research/*.json)",
      "Bash(mkdir -p .research/*)",
      "Bash(bash .claude/skills/rabbit-hole/scripts/*)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm -rf .research)",
      "Edit(.git/**)",
      "Read(.env)",
      "Write(.env)"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(rm *)"
    ]
  }
}
