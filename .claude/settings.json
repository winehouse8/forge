{
  "model": "claude-sonnet-4-5-20250929",

  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "32000",
    "MAX_THINKING_TOKENS": "10000",
    "MAX_MCP_OUTPUT_TOKENS": "50000",
    "MCP_TIMEOUT": "30000"
  },

  "hooks": {
    "PreToolUse": [{
      "hooks": [{
        "type": "command",
        "command": "python3 /Users/jaewoo/Desktop/Project/dev/260131_pathfinder/forge/.claude/hooks/tool-use-hook.py",
        "statusMessage": "Tracking rabbit-hole session..."
      }]
    }],
    "Stop": [{
      "hooks": [{
        "type": "command",
        "command": "python3 /Users/jaewoo/Desktop/Project/dev/260131_pathfinder/forge/.claude/hooks/stop-hook.py",
        "statusMessage": "Checking if research should continue..."
      }]
    }]
  },

  "permissions": {
    "allow": [
      "Read(.research/**)",
      "Write(.research/**)",
      "Edit(.research/**)",
      "Read(.claude/**)",
      "Bash(curl -L -o .research/papers/*.pdf *)",
      "Bash(jq * .research/*.json)",
      "Bash(cat .research/*.json)",
      "Bash(mkdir -p .research/*)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm -rf .research)",
      "Edit(.git/**)",
      "Read(.env)",
      "Write(.env)"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(rm *)"
    ]
  }
}
